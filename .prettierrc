{
    "endOfLine": "auto",
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": "*.scss",
            "options": {
                "parser": "scss",
                "useTabs": false,
                "singleQuote": false
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}